generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String         @id @default(uuid())
  email               String         @unique
  name                String         @default("")
  timezone            String         @default("UTC")
  reminderTime        String         @default("09:00")
  privacyPreferences  Json           @default("{}")
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  entries             JournalEntry[]
}

model JournalEntry {
  id         String        @id @default(uuid())
  userId     String
  date       DateTime
  mood       Int           @default(5)
  energy     Int           @default(5)
  stress     Int           @default(5)
  gratitude  String        @default("")
  mainFocus  String        @default("")
  wins       String        @default("")
  challenges String        @default("")
  learned    String        @default("")
  tags       String[]
  photoUrl   String?
  isDraft    Boolean       @default(true)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  shares     SharedEntry[]

  @@index([userId, date])
}

model SharedEntry {
  id             String       @id @default(uuid())
  entryId        String
  shareToken     String       @unique
  isActive       Boolean      @default(true)
  showAuthorName Boolean      @default(false)
  showMoodSummary Boolean     @default(true)
  createdAt      DateTime     @default(now())
  entry          JournalEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@index([shareToken])
}

enum SubscriberPlan {
  FREE
  PREMIUM
}

enum SubscriberStatus {
  ACTIVE
  UNSUBSCRIBED
}

model Subscriber {
  id                    String           @id @default(uuid())
  email                 String           @unique
  plan                  SubscriberPlan   @default(FREE)
  status                SubscriberStatus @default(ACTIVE)
  stripeCustomerId      String?
  stripeSubscriptionId  String?
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
}

// ==================== ADMIN SYSTEM ====================

model Admin {
  id            String   @id @default(uuid())
  username      String   @unique
  passwordHash  String   // bcrypt hashed password
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ==================== AUTHOR SYSTEM ====================

enum AuthorStatus {
  PENDING
  APPROVED
  REJECTED
}

model Author {
  id                String        @id @default(uuid())
  email             String        @unique
  name              String
  slug              String        @unique  // URL-friendly unique identifier
  bio               String        @default("")
  avatarUrl         String?
  websiteUrl        String?
  twitterHandle     String?
  stripeAccountId   String?       // For payouts (Stripe Connect)
  isVerified        Boolean       @default(false)
  status            AuthorStatus  @default(PENDING)
  rejectionReason   String?
  reviewedAt        DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  contents          Content[]
  authorSubscribers AuthorSubscriber[]

  @@index([slug])
  @@index([status])
}

enum ContentType {
  NEWSLETTER
  BLOG
  ARTICLE
}

enum ContentStatus {
  DRAFT
  PENDING_REVIEW
  APPROVED
  REJECTED
  PUBLISHED
  ARCHIVED
}

enum ContentAccess {
  FREE
  PAID
}

model Content {
  id                String          @id @default(uuid())
  authorId          String
  type              ContentType
  status            ContentStatus   @default(DRAFT)
  access            ContentAccess   @default(FREE)
  title             String
  slug              String          // URL-friendly title
  excerpt           String          @default("")
  body              String          @db.Text
  coverImageUrl     String?
  tags              String[]
  publishedAt       DateTime?
  reviewedAt        DateTime?
  reviewedBy        String?         // Admin ID who reviewed
  rejectionFeedback String?         // Feedback when rejected
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  author            Author          @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([authorId, slug])
  @@index([authorId, status])
  @@index([type, status])
  @@index([publishedAt])
  @@index([status])
}

model AuthorSubscriber {
  id              String           @id @default(uuid())
  authorId        String
  email           String
  plan            SubscriberPlan   @default(FREE)
  status          SubscriberStatus @default(ACTIVE)
  stripeCustomerId String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  author          Author           @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([authorId, email])
  @@index([authorId, status])
}

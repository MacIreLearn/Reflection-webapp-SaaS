generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String         @id @default(uuid())
  email               String         @unique
  name                String         @default("")
  timezone            String         @default("UTC")
  reminderTime        String         @default("09:00")
  privacyPreferences  Json           @default("{}")
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  entries             JournalEntry[]
}

model JournalEntry {
  id         String        @id @default(uuid())
  userId     String
  date       DateTime
  mood       Int           @default(5)
  energy     Int           @default(5)
  stress     Int           @default(5)
  gratitude  String        @default("")
  mainFocus  String        @default("")
  wins       String        @default("")
  challenges String        @default("")
  learned    String        @default("")
  tags       String[]
  photoUrl   String?
  isDraft    Boolean       @default(true)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  shares     SharedEntry[]

  @@index([userId, date])
}

model SharedEntry {
  id             String       @id @default(uuid())
  entryId        String
  shareToken     String       @unique
  isActive       Boolean      @default(true)
  showAuthorName Boolean      @default(false)
  showMoodSummary Boolean     @default(true)
  createdAt      DateTime     @default(now())
  entry          JournalEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@index([shareToken])
}

enum SubscriberPlan {
  FREE
  PREMIUM
}

enum SubscriberStatus {
  ACTIVE
  UNSUBSCRIBED
}

model Subscriber {
  id                    String           @id @default(uuid())
  email                 String           @unique
  plan                  SubscriberPlan   @default(FREE)
  status                SubscriberStatus @default(ACTIVE)
  stripeCustomerId      String?
  stripeSubscriptionId  String?
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
}
